{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "~/*": ["src/*"],
    },
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["./node_modules/**/*"],
}
